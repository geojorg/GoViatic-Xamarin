<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GoViatic.Views.EditTripPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:GoViatic.Converters"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:GoViatic.ViewModels"
    Title="Edit Trip"
    Visual="Material"
    mc:Ignorable="d">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:CurrencyConverter x:Key="currencyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid
            Margin="14"
            x:DataType="viewModels:EditTripViewModel"
            ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Row="0"
                Grid.ColumnSpan="1"
                FontFamily="{StaticResource UbuntuBold}"
                FontSize="20"
                Text="Edit your Trip"
                TextColor="Accent"
                VerticalOptions="CenterAndExpand" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                FontFamily="{StaticResource UbuntuBold}"
                FontSize="Body"
                Text="City:"
                VerticalOptions="Center" />
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding City}" />
            <Label
                Grid.Row="2"
                Grid.Column="0"
                FontFamily="{StaticResource UbuntuBold}"
                FontSize="Body"
                Text="Budget:"
                VerticalOptions="Center" />
            <Entry
                Grid.Row="2"
                Grid.Column="1"
                Keyboard="Numeric"
                Text="{Binding Budget, Converter={StaticResource currencyConverter}}" />
            <Label
                Grid.Row="3"
                Grid.Column="0"
                FontFamily="{StaticResource UbuntuBold}"
                FontSize="Body"
                Text="Starting Date:"
                VerticalOptions="CenterAndExpand" />
            <DatePicker
                Grid.Row="3"
                Grid.Column="1"
                BackgroundColor="#F6F6F6"
                Date="{Binding Date}"
                Format="  dd/MM/yyyy"
                Visual="Default" />
            <Label
                Grid.Row="4"
                Grid.Column="0"
                FontFamily="{StaticResource UbuntuBold}"
                FontSize="Body"
                Text="Ending Date:"
                VerticalOptions="Center" />
            <DatePicker
                Grid.Row="4"
                Grid.Column="1"
                BackgroundColor="#F6F6F6"
                Date="{Binding EndDate}"
                Format="  dd/MM/yyyy"
                Visual="Default" />
            <Button
                Grid.Row="8"
                Grid.Column="0"
                Margin="0,0,0,30"
                BackgroundColor="Accent"
                Command="{Binding SaveCommand}"
                CornerRadius="7"
                HeightRequest="46"
                HorizontalOptions="Center"
                Text="SAVE"
                TextColor="White"
                WidthRequest="190" />
            <Button
                Grid.Row="8"
                Grid.Column="1"
                Margin="0,0,0,30"
                BackgroundColor="Red"
                Command="{Binding DeleteCommand}"
                CornerRadius="7"
                HeightRequest="46"
                HorizontalOptions="Center"
                Text="DELETE"
                TextColor="White"
                WidthRequest="190" />
        </Grid>
    </ContentPage.Content>
</ContentPage>